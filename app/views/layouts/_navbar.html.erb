<header>
  <div class='container'>
    <nav class='registration'>
      <ul>
        <li><a> <%= link_to image_tag('logo_blanco.png', width:"30", height:"20"), root_path %> </li></a>
        
        <% if current_user %>
          <li><a><%= link_to "My profile", users_show_path(current_user.id) %></li></a>
          <li><a><%= link_to "Log out", destroy_user_session_path, method: :delete %></li></a>
        <% else %>
          <li><a><%= link_to "Log in", new_user_session_path %></li></a>
          <li><a><%= link_to "Register", new_user_registration_path %></li></a>
        <% end %>
      </ul>
    </nav>
    <nav class='access'>
      <ul>
        <li><a><%= link_to 'Courses', courses_index_path %></a></li>
        <% if current_user %>
          <li><a><%= link_to 'Create a course!', courses_new_path(:id => current_user.id) %></a></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>