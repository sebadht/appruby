
<section class="section">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="container">
      <div class='columns is-centered'>

        <div class='column is-half'>

          <h2 class='is-size-4'>Sign up</h2>

          <div class="field">
            <%= f.label "name", :class => 'label' %>
            <div class="control">
              <%= f.text_field :name, :class => 'input', :type => 'text', :placeholder => 'Write your name here', autofocus: true, autocomplete: "name" %>
            </div>
          </div>

          <div class="field">
            <%= f.label "last name", :class => 'label' %>
            <div class="control">
              <%= f.text_field :last_name, :class => 'input', :type => 'text', :placeholder => 'Write your last name here', autofocus: true, autocomplete: "last_name" %>
            </div>
          </div>
          
          <div class="field">
            <%= f.label "email", :class => 'label' %>
            <div class="control">
              <%= f.text_field :email, :class => 'input', :type => 'text', :placeholder => 'Write your email here', autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="field">
            <%= f.label "password", :class => 'label' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <div class="control">
              <%= f.password_field :password, :class => 'input', :type => 'password', autofocus: true, autocomplete: "new-password" %>
            </div>
          </div>

          <div class="field">
            <%= f.label "password confirmation", :class => 'label' %>
            <div class="control">
              <%= f.password_field :password_confirmation, :class => 'input', :type => 'password', autofocus: true, autocomplete: "new-password" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", :class => 'button is-link'%>
          </div>

        </div>

      </div>
    </div>
  <% end %>

  <div class="container">
    <div class='columns is-centered'>
      <div class='column is-half'>
        <%= render "users/shared/links", :class => 'button' %>
      </div>
    </div>
  </div>
</section>