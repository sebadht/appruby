
<section class="section">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class=container>
      <div class='columns is-centered'>
        <div class='column is-half'>
        <h2 class='is-size-4 '>Log in</h2>
          
          <div class="field">
            <%= f.label "email", :class => 'label' %>
            <div class="control">
              <%= f.text_field :email, :class => 'input', :type => 'text', :placeholder => 'Write your email here', autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="field">
            <%= f.label "password", :class => 'label' %>
            <div class="control">
              <%= f.password_field :password, :class => 'input', :type => 'password', autocomplete: "current-password" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions" >
            <%= f.submit "Log in", :class => 'button is-link' %>
          </div>

        </div>
      </div>
    </div>
  <% end %>

  <div class="container">
    <div class='columns is-centered'>
      <div class='column is-half'>
        <%= render "users/shared/links", :class => 'button' %>
      </div>
    </div>
  </div>
</section>
